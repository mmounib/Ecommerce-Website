// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model revocatedTokens {
  token String @id @unique
}

model user {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String  @unique
  address  String?
  username String  @unique
  hash     String
  hashedRt String?

  cards      cardsList?
  favourites FavouritesList?
}

model cardsList {
  id      Int                @id @unique @default(autoincrement())
  userId  Int                @unique
  user    user               @relation(fields: [userId], references: [id])
  product CardsListProduct[]
}

model CardsListProduct {
  id          Int       @id @default(autoincrement())
  productId   Int
  product     Product   @relation(fields: [productId], references: [id])
  cardsListId Int
  cardsList   cardsList @relation(fields: [cardsListId], references: [id])
  quantity    Int       @default(1)
}

model Product {
  id    Int      @id @unique
  title String
  price Float
  image String[]

  descritption String[]
  ImageDesc    String[]

  categoryId      Int
  productCategory category @relation(fields: [categoryId], references: [id])

  favouriteId      Int
  productFavourite FavouritesList[]

  ProductReviews   reviews[]
  cardsListId      Int
  CardsListProduct CardsListProduct[]
}

model FavouritesList {
  id      Int       @id @unique @default(autoincrement())
  userId  Int       @unique
  user    user      @relation(fields: [userId], references: [id])
  product Product[]
}

model reviews {
  id      Int      @id
  Date    String
  content String
  stars   Int
  images  String[]
  helpful Int

  ProductId Int
  Product   Product @relation(fields: [ProductId], references: [id])
}

model category {
  id          Int    @id @unique
  type        String @unique
  description String

  products Product[]
}
